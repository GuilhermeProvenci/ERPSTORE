unit TCompra;

interface

uses TCliente;

type
  TCompra = class
  public
    class function CalcularValorFinal(valorCompra: Double; cliente: TCliente): Double;
  end;

implementation

{ TCompra }

class function TCompra.CalcularValorFinal(valorCompra: Double; cliente: TCliente): Double;
var
  desconto: Double;
begin
  
  desconto := cliente.ObterDesconto;

  
  Result := valorCompra * (1 - desconto);
end;

end.
